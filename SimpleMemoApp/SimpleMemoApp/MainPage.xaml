<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMemoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="日付："
                />
            <DatePicker Format="yyyy/MM/dd" x:Name="Date"/>
            <Label
                Text="件名："/>
            <Entry x:Name="Subject"/>
            <Label
                Text="メモ："/>
            <Entry x:Name="Text"/>

            <Button
                x:Name="BtnRead"
                Text="読み込み" Clicked="BtnRead_Clicked" />
            <Button
                x:Name="BtnSave"
                Text="保存" Clicked="BtnSave_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

